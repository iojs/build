{
  "port": 9999,
  "path": "/deploy-webhook",
  "secret": "{{ envs.github_webhook_secret }}",
  "log": "/home/{{ server_user }}/logs/github-bot-webhook.log",
  "rules": [
    {
      "event": "push",
      "match": "ref == \"refs/heads/master\"",
      "exec": "/home/{{ server_user }}/bin/deploy-github-bot.sh"
    }
  ]
}
