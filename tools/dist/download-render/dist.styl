// Styles for static dist pages
.content--dist
  text-align left

  h2
    border-bottom 2px solid #CECECE

  a
    text-decoration none !important

    &:hover
      background #F7DF31
      text-decoration none
      color #292829
      border-radius 3px

  table
    width 100%
    margin 1em 0

  th
    font-weight normal

  .release-platform-divider
    border-top 1px solid #CECECE
    padding-top 1em

.content--full-index
  max-width inherit
  white-space nowrap
  display inline-block

  td
    text-align left
    padding inherit 1em inherit 1em

  td:last-child
    text-align right